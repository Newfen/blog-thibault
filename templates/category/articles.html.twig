{% extends 'base.html.twig' %}


{% block body %}

    {% include('/layout/navBar.html.twig') %}

    <main class="wrapper">

    <h1>Articles de la cat√©gorie {{ category.name }}</h1>

        <ul>
            {% for article in articles %}
                <div class="card" style="width: 18rem;">
                    {#<img class="card-img-top" src="..." alt="Card image cap">#}
